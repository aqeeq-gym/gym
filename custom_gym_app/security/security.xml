<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_aqeeq_gym_category" model="ir.module.category">
        <field name="name">Al-Aqeeq Gym</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_gym_trainer" model="res.groups">
        <field name="name">Employee</field>
        <field name="category_id" ref="custom_gym_app.module_aqeeq_gym_category"/>
    </record>

    <record id="group_gym_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="custom_gym_app.module_aqeeq_gym_category"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="res_partner_rule" model="ir.rule">
        <field name="name">Partner</field>
        <field ref="hr.model_res_partner" name="model_id"/>
        <field name="domain_force">[('parent_id.company_id','=',user.company_id.id)]</field>
        <field name="groups" eval="[(4, ref('custom_gym_app.group_gym_manager'))]"/>
    </record>

</odoo>