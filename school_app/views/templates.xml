<odoo>
    <data>
        <template id="school_registration_page_template">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure"/>
                    <div class="container">
                        <h2 style="margin-left:15px;margin-top:25px;">School Registration</h2>
                        <br/>
                        <form role="form" action="/create/school/member" method="post">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                <div class="row col-12 form-group s_website_form_field s_website_form_custom">
                                    <div class="form-group col-6 s_website_form_field s_website_form_custom s_website_form_required" data-type="char" data-name="Field">
                                        <div class="s_col_no_resize s_col_no_bgcolor" style="text-align:right;">
                                            <label class="col-form-label col-sm-auto s_website_form_label" for="year">
                                                <span class="s_website_form_mark"> *</span>
                                                <span class="s_website_form_label_content">للعام الدراسي</span>
                                            </label>
                                            <div class="col-sm">
                                                <input type="number" name="year" placeholder="Year" t-att-value="year" id="year" class="form-control s_website_form_input" required=""/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group col-6 s_website_form_field s_website_form_custom s_website_form_required" data-type="char" data-name="Field">
                                        <div class="s_col_no_resize s_col_no_bgcolor" style="text-align:right;">
                                            <label class="col-form-label col-sm-auto s_website_form_label" for="name">
                                                <span class="s_website_form_mark"> *</span>
                                                <span class="s_website_form_label_content">اسم الطالب ( الطالبة) رباعيا</span>
                                            </label>
                                            <div class="col-sm">
                                                <input type="text" name="name" placeholder="Student Name" t-att-value="name" id="name" class="form-control s_website_form_input" required=""/>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row col-12 form-group s_website_form_field s_website_form_custom">
                                    <div class="form-group col-6 s_website_form_field s_website_form_custom s_website_form_required" data-type="char" data-name="Field">
                                        <div class="s_col_no_resize s_col_no_bgcolor" style="text-align:right;">
                                            <label class="col-form-label col-sm-auto s_website_form_label" for="grade">
                                                <span class="s_website_form_mark"> *</span>
                                                <span class="s_website_form_label_content">المرحلة</span>
                                            </label>
